<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_add_goods_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_image_loading" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <TextView
            android:id="@+id/item_add_goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="4dp"
            android:text="被罩"
            android:textColor="@color/black"
            android:textSize="@dimen/font_large" />

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/ly_item_goods_reduce"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:background="@drawable/rectangle_left_selector">

                <View
                    android:layout_width="16dp"
                    android:layout_height="2dp"
                    android:layout_centerInParent="true"
                    android:background="@color/color_435354" />
            </RelativeLayout>

            <EditText
                android:id="@+id/item_goods_num"
                android:layout_width="60dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:background="@drawable/windows_bg"
                android:focusable="true"
                android:hint="0"
                android:inputType="number"
                android:maxLines="1"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:textSize="@dimen/font_small" />

            <RelativeLayout
                android:id="@+id/ly_item_goods_add"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:background="@drawable/rectangle_right_selector">

                <View
                    android:layout_width="16dp"
                    android:layout_height="2dp"
                    android:layout_centerInParent="true"
                    android:background="@color/color_435354" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="16dp"
                    android:layout_centerInParent="true"
                    android:background="@color/color_435354" />
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/item_add_goods_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="8dp"
            android:layout_toEndOf="@+id/layout"
            android:layout_toRightOf="@+id/layout"
            android:text="单位(个)"
            android:textColor="@color/gray"
            android:textSize="@dimen/font_normal" />
    </RelativeLayout>
</LinearLayout>
