<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="8dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="8dp">

    <TextView
        android:id="@+id/tv_back_wash_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:drawableLeft="@drawable/ic_item_chuku"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:text="20180104104422"
        android:textColor="@color/black_light"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_back_wash_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_back_wash_code"
        android:layout_alignStart="@+id/tv_back_wash_code"
        android:layout_below="@+id/tv_back_wash_code"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="4dp"
        android:text="浴袍" />

    <TextView
        android:id="@+id/tv_back_wash_shuliang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_back_wash_name"
        android:layout_alignStart="@+id/tv_back_wash_name"
        android:layout_below="@+id/tv_back_wash_name"
        android:layout_marginTop="4dp"
        android:text="10"
        android:textColor="@color/txt_red" />

    <TextView
        android:id="@+id/tv_back_wash_spec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_back_wash_shuliang"
        android:layout_alignStart="@+id/tv_back_wash_shuliang"
        android:layout_below="@+id/tv_back_wash_shuliang"
        android:layout_marginTop="4dp"
        android:text="正常" />

    <TextView
        android:id="@+id/tv_back_wash_rqi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_back_wash_spec"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="2018-01-03 17:10:17"
        android:textColor="@color/gray"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tv_back_wash_operate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tv_back_wash_rqi"
        android:layout_alignRight="@+id/tv_back_wash_rqi"
        android:layout_centerVertical="true"
        android:background="@drawable/red_w_bg"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp"
        android:text="回换"
        android:textColor="@color/white"
        android:textSize="12sp" />
</RelativeLayout>